{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "root": "src",
  "compilerOptions": {
    "tsConfigPath": "./tsconfig.json"
  },
  "projects": {
    "my-project": {
      "type": "application",
      "root": "src/webapp",
      "entryFile": "index",
      "sourceRoot": "src/webapp",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "my-app": {
      "type": "application",
      "root": "src/translate",
      "entryFile": "index",
      "sourceRoot": "src/translate",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
